<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/navbar_title"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="navigation_bar"
        android:title="@string/navbar_settings_title" >

        <com.pixeldust.settings.preferences.SystemSettingSwitchPreference
            android:key="navigation_bar_enabled"
            android:title="@string/navbar_enable_bar"
            android:defaultValue="true" />

        <com.pixeldust.settings.preferences.SystemSettingSwitchPreference
                android:key="enable_nav_bar"
                android:title="@string/navbar_enable_bar"
                android:summary="@string/navbar_enable_bar_summary" />

    </PreferenceCategory>

        <PreferenceCategory
                android:key="navbar_cat"
                android:title="@string/navbar_cat" >

            <PreferenceScreen
                    android:key="navbar_button_settings"
                    android:fragment="com.pixeldust.settings.dslv.ActionListViewSettings"
                    android:title="@string/navbar_button_title"
                    android:summary="@string/navbar_button_summary" >
                <extra android:name="actionMode" android:value="0" />
                <extra android:name="maxAllowedButtons" android:value="5" />
                <extra android:name="disableDeleteLastEntry" android:value="true" />
                <!--<extra android:name="fragment" android:value="com.android.settings.slim.fragments.NavbarButtonFragment" />-->
            </PreferenceScreen>

            <PreferenceScreen
                android:fragment="com.pixeldust.settings.fragments.NavBarButtonStyle"
                android:key="nav_bar_button_style"
                android:title="@string/nav_bar_button_style"
                android:summary="@string/nav_bar_button_style_summary" />

            <PreferenceScreen
                android:key="navbar_style_dimen_settings"
                android:fragment="com.pixeldust.settings.fragments.NavbarStyleDimenSettings"
                android:title="@string/navbar_style_dimen_title"
                android:summary="@string/navbar_style_dimen_summary" />

        </PreferenceCategory>

        <PreferenceCategory
                android:key="advanced_cat"
                android:title="@string/advanced_settings">

            <ListPreference
                    android:key="pref_navbar_menu_display"
                    android:entries="@array/pref_menu_display_entries"
                    android:entryValues="@array/pref_menu_display_values"
                    android:title="@string/title_pref_menu_display"
                    android:summary="@string/summary_pref_menu_display" />

            <ListPreference
                    android:key="pref_navbar_menu_location"
                    android:entries="@array/pref_navigation_menu_entries"
                    android:entryValues="@array/pref_navigation_menu_values"
                    android:title="@string/title_pref_menu_location"
                    android:summary="@string/summary_pref_menu_location" />

            <SwitchPreference
                    android:key="navbar_can_move"
                    android:title="@string/navbar_can_move"
                    android:summary="@string/navbar_can_move_summary" />

        </PreferenceCategory>

    <PreferenceCategory
        android:key="navigation_barc"
        android:title="@string/navigation_bar_cus"
        android:dependency="navigation_bar_enabled" >

        <PreferenceScreen
            android:fragment="com.pixeldust.settings.fragments.NavBarDimensSettings"
            android:key="navbar_dimens"
            android:title="@string/navbar_dimensions_title" />

        <PreferenceScreen
            android:title="@string/navbar_tuner_title"
            android:summary="@string/navbar_tuner_summary" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.NavbarActivity" />
        </PreferenceScreen>

        <com.pixeldust.settings.preferences.SystemSettingSwitchPreference
            android:key="navigation_bar_menu_arrow_keys"
            android:title="@string/show_navbar_arrow_keys_title"
            android:summary="@string/show_navbar_arrow_keys_summary"
            android:dependency="navigation_bar_enabled"
            android:defaultValue="false" />

        <com.pixeldust.settings.preferences.SystemSettingSwitchPreference
            android:key="swap_navigation_keys"
            android:title="@string/swap_navigation_keys_title"
            android:summary="@string/swap_navigation_keys_summary"
            android:defaultValue="false" />

        <com.pixeldust.settings.preferences.SystemSettingSwitchPreference
            android:key="nav_bar_dynamic"
            android:title="@string/nav_bar_dynamic_title"
            android:summary="@string/nav_bar_dynamic_summary"
            android:defaultValue="false" />

        <com.pixeldust.settings.preferences.SecureSettingSwitchPreference
            android:key="one_handed_mode_ui"
            android:title="@string/one_handed_mode_title"
            android:summary="@string/one_handed_mode_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
